function biggestSecond(lista) {
  const uniqueNumbers = [...new Set(lista)];
  uniqueNumbers.sort((a, b) => b - a);
   if(uniqueNumbers.length < 2) {
    return null;
   }
   return uniqueNumbers[1];
}
const numeros = [13, 45, 83, 10, 48];
console.log(biggestSecond(numeros));

// node,js

const readline = require("readline");

function biggestSecond(lista) {
  const uniqueNumbers = [...new Set(lista)];
  uniqueNumbers.sort((a, b) => b - a);
   if(uniqueNumbers.length < 2) {
    return null;
   }
   return uniqueNumbers[1];
}
const rl = readline.createInterface({
  imput: process.stdin,
  output: process.stdout
});

rl.question("introduce el numero separado por comas: ", (input) => {
  const numeros = input.split(",").map(n => parseInt(n.trim()));
  console.log("segundo numero mas grande:", biggestSecond(numeros));
  rl.close();
});









































